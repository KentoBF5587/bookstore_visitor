<header>
  <nav class="navbar navbar-expand-lg navigation navbar-light bg-light">
    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= image_tag 'header_logo.png' %>
    <% end %>

    <button class='navbar-toggler' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent'
      aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ms-auto main-nav align-items-center">
    <li class="nav-item">
      <%= link_to t('header.find_bookstore'), bookstores_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
    <%= link_to t('header.diagnostic'), "#", class: 'nav-link text-decoration-line-through' %>
    </li>
    <li class="nav-item">
    <%= link_to t('header.how_to_use'), "/how_to_use", class: 'nav-link', target: :_blank, rel: "noopener noreferrer" %>
    </li>

    <li class="nav-item dropdown dropdown-slide">
      <%= link_to "#{current_user.name}", "#", class: 'nav-link dropdown-toggle', data: { bs_toggle: 'dropdown'}, aria: { haspopop: 'true', expand: 'false' }, id: 'header-board-menu' %>
     <div class="dropdown-menu dropdown-menu-end">
       <%= link_to t('header.profile'), profiles_path, class: 'dropdown-item' %>
       <%= link_to t('header.wanna_go_bookstore'), "/profiles/bookstore_list", class: 'dropdown-item' %>
       <%= link_to t('header.review_list'), review_list_profiles_path, class: 'dropdown-item' %>
     <div class="dropdown-divider"></div>
       <%= link_to t('header.logout'), logout_path, class: 'dropdown-item', data: { turbo_method: :delete } %>
     </div>
    </li>
    </ul>
  </div>
  </nav>
</header>

